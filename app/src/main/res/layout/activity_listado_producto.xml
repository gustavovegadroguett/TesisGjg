<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.gustavovega.tesisgjg.ListadoProducto"
    android:id="@+id/ListadoProducto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ListadoServidor"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:enabled="false"
            android:textStyle="bold|italic"
            android:textSize="20sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_width="330dp"
                android:layout_height="155dp"
                android:id="@+id/listadoPrincipal" />

        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="Carrito de Compra"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_weight="0.38" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="167dp"
            android:id="@+id/carritolista"
            android:layout_weight="0.56" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRMAR"
                android:id="@+id/button"
                android:gravity="center"
                android:layout_weight="0.38" />

            <TextView
                android:layout_width="193dp"
                android:layout_height="match_parent"
                android:id="@+id/total"
                android:gravity="end|center_horizontal"
                android:textStyle="normal|bold"
                android:textSize="26dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
