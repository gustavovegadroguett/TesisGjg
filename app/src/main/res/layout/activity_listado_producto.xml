<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.gustavovega.tesisgjg.ListadoProducto"
    android:id="@+id/ListadoProducto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ListadoServidor"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:enabled="false"
            android:editable="false"
            android:textStyle="bold|italic"
            android:textSize="20dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_width="330dp"
                android:layout_height="181dp"
                android:id="@+id/listadoPrincipal" />

        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="Carrito de Compa"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carritolista" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:id="@+id/total"
            android:layout_gravity="right"
            android:gravity="bottom|right" />

    </LinearLayout>
</RelativeLayout>
